<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="anartzmuxika.manageimages.activities.MainActivity"
    tools:showIn="@layout/activity_main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:gravity="center"
            android:text="@string/explain_text"
            android:id="@+id/text_about_libraryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="@string/manage_upload_images"
            android:id="@+id/open_image_manage_optionsButton"
            android:layout_marginTop="15sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="12"/>

        <TextView
            android:id="@+id/select_language_title"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:text="@string/select_language_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="@string/basque_language"
            android:id="@+id/select_basqueButton"
            android:layout_marginTop="5sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="12"/>
        <Button
            android:text="@string/catala_language"
            android:id="@+id/select_catalaButton"
            android:layout_marginTop="5sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="12"/>
        <Button
            android:text="@string/english_language"
            android:id="@+id/select_englishButton"
            android:layout_marginTop="5sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="12"/>
        <Button
            android:text="@string/spanish_language"
            android:id="@+id/select_spanishButton"
            android:layout_marginTop="5sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="12"/>
    </LinearLayout>


</ScrollView>
